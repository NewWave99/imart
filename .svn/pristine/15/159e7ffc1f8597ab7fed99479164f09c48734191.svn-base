<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:h="http://java.sun.com/jsf/html"
                template="./WEB-INF/inc-templates/main-template.xhtml"
                xmlns:p="http://primefaces.org/ui">

    <ui:define name="title">
        <h:outputText value="#{msg['application.title']} - #{userInfoController.authUser.username}"/>
    </ui:define>

    <ui:define name="content">
        <ui:decorate template="./WEB-INF/inc-templates/content-template.xhtml">
            <ui:define name="content_container">

                <h:form id="content_form" acceptcharset="UTF-8" enctype="multipart/form-data" prependId="false">
                    <p:messages id="messages_id"/>
                    <ui:include src="/pages/#{navigationController.currentPage}.xhtml" />
                </h:form>

            </ui:define>
        </ui:decorate>
    </ui:define>

</ui:composition>

