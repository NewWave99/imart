.ui-menubar .ui-menuitem-link {
    width: auto;

    /*    padding-top : 0em;
        padding-right : 0em;
        padding-bottom  : 0em;
        padding-left : 0em;*/

}

.ui-menubar .ui-menu-child .ui-menuitem-link {
    width: 100%
}

/*Remove downward facing triangle from submenus*/
.ui-menu-link > .ui-icon-triangle-1-s {
    display: none !important;
}
/*Let submenu width be based on content*/
.ui-menu .ui-menu-parent .ui-menu-child {
    width: auto;
    white-space: nowrap;
}
/*Prevent rightward facing icons from wrapping*/
.ui-menu-parent > .ui-menu-link > span.ui-icon-triangle-1-e {
    position: absolute;
    height:16px;
    top:50%;
    margin-top:-8px;
    right: -8px;
}
/*Make room for righward facing icons*/
.ui-menu ul.ui-menu-child {
    padding-right: 16px !important;
}
/*Set link width, which affects submenu overlap and is related to rightward facing icon padding*/
.ui-menu-child .ui-menu-link {
    line-height: normal;
    padding: 0em;
    width: 100%;
    /*                    width: 100% !important;*/
}
/*Prevent menuitem icon from generating a line break. Also make room for left-side icon.  Note: we use relative parent absolute child strategy*/
.ui-menu-child > .ui-menu-item > .ui-menu-link > .ui-menu-text {
    position: relative !important;
    margin-left: 16px !important;
}
.ui-menu-child > .ui-menu-item > .ui-menu-link > .ui-menu-text > .ui-menu-icon-left {
    position: absolute;
    height:16px;
    top:50%;
    margin-top:-8px;
    left: -16px;
}
/*Set border (this is specific to black-tie theme)*/
.ui-widget-content, .ui-menu .ui-widget-content {
    border: 1px solid #CCCCCC;
}


